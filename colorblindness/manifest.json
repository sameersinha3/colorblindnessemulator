{
    "manifest_version": 3,
    "name": "Color Blindness Emulator",
    "description": "This browser extension for Chrome emulates what a user with a common form of color blindness may perceive.",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "public/icon.png",
        "32": "public/icon.png",
        "48": "public/icon.png",
        "128": "public/icon.png"
    }
}